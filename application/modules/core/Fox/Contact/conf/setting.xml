<settings>
    <setting>
        <menu name="contact" label="Contact Requests" module="contact" order="3" />
    </setting>
    <items>
        <item name="contact" label="Email Settings" menu="contact" order="0">
            <sections>               
                <section label="Reply Configuration" name="reply" order="0">
                    <field name="name" label="Sender Name" inputType="text" order="0" />
                    <field name="email" label="Sender Email" inputType="text" order="1" />
                    <field name="email_template" label="Email Template" inputType="select" order="2">
                        <sourceModel>core/email/template</sourceModel>
                        <default>7</default>
                    </field>
                </section>
                <section label="Receiver Configuration" name="receiver" order="1">
                    <field name="email" label="Email" inputType="text" order="0" />
                    <field name="email_template" label="Email Template" inputType="select" order="1">
                        <sourceModel>core/email/template</sourceModel>
                        <default>6</default>
                    </field>
                </section>
            </sections>
        </item>
    </items>
</settings>