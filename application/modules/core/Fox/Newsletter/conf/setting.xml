<settings>
    <setting>
        <menu name="newsletter" label="Newsletter" module="newsletter" order="2" />
    </setting>
    <items>
        <item name="newsletter" label="Newsletter Configuration" menu="newsletter" order="0">
            <sections>
                <section label="Subscription Options" name="subscription" order="0">
                    <field name="success_email_sender" label="Success Email Sender" inputType="select" order="0">
                        <sourceModel>core/email/config</sourceModel>
                        <default>general</default>
                    </field>
                    <field name="success_email_template" label="Success Email Template" inputType="select" order="1">
                        <sourceModel>core/email/template</sourceModel>
                        <default>10</default>
                    </field>
                    <field name="need_to_confirm" label="Need to Confirm" inputType="select" order="2">
                        <default>1</default>
                        <options>
                            <option value="0">No</option>
                            <option value="1">Yes</option>
                        </options>
                    </field>
                    <field name="confirmation_email_sender" label="Confirmation Email Sender" inputType="select" order="3">
                        <sourceModel>core/email/config</sourceModel>
                        <default>general</default>
                    </field>
                    <field name="confirmation_email_template" label="Confirmation Email Template" inputType="select" order="4">
                        <sourceModel>core/email/template</sourceModel>
                        <default>9</default>
                    </field>
                    <field name="unsubscription_email_sender" label="Unsubscription Email Sender" inputType="select" order="5">
                        <sourceModel>core/email/config</sourceModel>
                        <default>general</default>
                    </field>                    
                    <field name="unsubscription_email_template" label="Unsubscription Email Template" inputType="select" order="6">
                        <sourceModel>core/email/template</sourceModel>
                        <default>11</default>
                    </field>                                                               
                </section>
            </sections>
        </item>
    </items>
</settings>