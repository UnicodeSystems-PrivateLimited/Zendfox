<layout>
    <default>
        <link href="css/style-cms.css" type="text/css" rel="stylesheet" />
        <ref key="right">
            <view key="newsletter_subscriber" class="newsletter/subscriber" tpl="newsletter/form" order="0" />             
            <view key="right_con" class="core/template" tpl="right/rightsidebar" order="1" />
        </ref>
        <ref key="left">
            <view key="left_con" class="core/template" tpl="left/leftsidebar" order="0" />
        </ref>
    </default>    
    <!-- Error page -->
    <error_error>
        <container key="one-column"></container>
        <head>
            <title>Exception Page</title>
        </head>
        <ref key="content">
            <view key="exception" class="cms/exception" tpl="cms/exception" />
        </ref>
    </error_error>
</layout>