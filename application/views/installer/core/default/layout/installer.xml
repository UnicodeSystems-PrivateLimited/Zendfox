<layout>
    <default>
        <container key="two-columns-right"></container>
        <ref key="right">
            <view key="configure_steps" class="installer/installer" tpl="setup/steps" />
        </ref>
    </default>
    
    <!-- License agreement page -->
    <wizard_index>        
        <ref key="content">
            <view key="license" class="installer/installer" tpl="setup/license" />
        </ref>
    </wizard_index>
    
    <!-- Locale setup page -->
    <wizard_locale>
        <ref key="content">
            <view key="locale" class="installer/installer" tpl="setup/locale" />
        </ref>
    </wizard_locale>
    
    <!-- Database configuration page -->
    <wizard_configure>
        <head>
            <script src="theme/global/js/form.js" type="text/javascript" language="javascript" _global="global"/>
        </head>
        <ref key="content">
            <view key="configure" class="installer/installer" tpl="setup/configure" />
        </ref>
    </wizard_configure>
    
    <!-- Administrator account setup page -->
    <wizard_administrator>
        <head>
            <script src="theme/global/js/form.js" type="text/javascript" language="javascript" _global="global"/>
        </head>
        <ref key="content">
            <view key="administrator" class="installer/administrator" tpl="setup/administrator" />
        </ref>
    </wizard_administrator>
    
    <!-- Installation success page -->
    <wizard_finish>
        <ref key="content">
            <view key="finish" class="installer/installer" tpl="setup/finish" />
        </ref>
    </wizard_finish>
</layout>